<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title"><%= t "listusers" %></h4>
            <form action="" method="post">
              <div class="row">
                <div class="col-md-1">
                  <div class="form-group">
                    <input type="text" name="id" class="form-control border-input" value=""
                      placeholder=<%= t "id" %>>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <input type="text" name="fullname" class="form-control border-input" placeholder
                      =<%= t "name" %> value="">
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group">
                    <select name="friend_list" class="form-control border-input">
                      <option value="0"><%= t "chose" %></option>
                    </select>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <input type="submit" name="search" value=<%= t "search" %> class="is" />
                    <input type="submit" name="reset" value=<%= t "unsearch" %> class="is" />
                  </div>
                </div>
              </div>
            </form>
            <a href="edit.html" class="addtop"><img src="assets/img/add.png" alt="" /><%= t "add" %></a>
          </div>
          <div class="content table-responsive table-full-width">
            <table class="table table-striped">
              <thead>
                <th><%= t "id" %></th>
                <th><%= t "name" %></th>
                <th><%= t "email" %></th>
                <th><%= t "phone" %></th>
                <th><%= t "activated" %></th>
                <th><%= t "function" %></th>
              </thead>
              <tbody>
                <tr>
                  <td></td>
                  <td><a href="edit.html"></a></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td>
                    <a href="edit.html"><img src="assets/img/edit.gif" alt="" /><%= t "edit" %></a>
                    &nbsp;||&nbsp;
                    <a href=""><img src="assets/img/del.gif" alt="" /><%= t "delete" %></a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
